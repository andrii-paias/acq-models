  "type": "object",
  "description": "a completely de-referenced purchase order, complete with ALL relevant details",
  "properties": {
    "purchase_order": {
      "description": "a completely de-referenced purchase order",
      "id": "purchase_order",
      "type": "object",
      "$ref": "mod-orders-storage/schemas/purchase_order.json"
    },
    "po_lines": {
      "description": "a list of completely de-referenced purchase order lines",
      "id": "po_lines",
      "type": "array",
