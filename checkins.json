{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "collection of check-ins",
  "type": "object",
  "properties": {
    "checkins": {
      "description": "an array of check-ins",
      "id": "checkins",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "po_line_id": {
            "description": "UUID of po line this check-in is related to",
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          "received": {
            "description": "number of pieces received",
            "type": "integer"
          },
          "pieces": {
            "description": "an array of pieces details",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "barcode": {
                  "description": "the barcode assigned to the piece",
                  "type": "string"
                },
                "note": {
                  "description": "free form notes pertaining to the piece",
                  "type": "string"
                },
                "enumeration": {
                  "description": "the volume/caption of the piece",
                  "type": "string"
                },
                "location": {
                  "description": "UUID of the location record",
                  "type": "string",
                  "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "totalRecords": {
      "description": "total number of records in the array",
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "required": [
    "checkins",
    "totalRecords"
  ]
}
